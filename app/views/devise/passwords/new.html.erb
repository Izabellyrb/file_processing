<head>
  <%= stylesheet_link_tag "devise"%>
</head>
<div class="devise-container forgot-password-container">
  <h2 class="devise-title">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'devise-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource, class: 'error-messages' %>

    <div class="form-field">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>

    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", class: 'submit-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>