<head>
  <%= stylesheet_link_tag "devise"%>
</head>
<body>
<div class="devise-container edit-container">
  <h2 class="devise-title"><%= t('helpers.registrations.edit.title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'devise-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource, class: 'error-messages' %>

    <div class="form-field">
      <%= f.label :email, t('helpers.labels.email'), class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="notification">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-field">
      <%= f.label :password, t('helpers.labels.password'), class: 'form-label' %> 
        <i>(<%= t('helpers.registrations.edit.password_info') %>)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-input' %>
      <% if @minimum_password_length %>
        
        <em><%= t('helpers.registrations.edit.characters_minimum', resource: @minimum_password_length) %> </em>
      <% end %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, t('helpers.registrations.edit.password_confirmation'), class: 'form-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input' %>
    </div>

    <div class="form-field">
      <%= f.label :current_password, t('helpers.registrations.edit.current_password'), class: 'form-label' %> 
        <i>(<%= t('helpers.registrations.edit.password_confirmation_info') %>)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-input' %>
    </div>

    <div class="form-actions">
      <%= f.submit t('helpers.registrations.edit.update'), class: 'submit-button' %>
    </div>
  <% end %>

  <p class="cancel-title"><%= t('helpers.registrations.edit.cancel_my_account') %></p>
  <p><%= t('helpers.registrations.edit.unhappy') %></p>
  <div class="cancel-account">
    <%= button_to t('helpers.registrations.edit.cancel_my_account'), registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'cancel-button' %>
  </div>

  <%= link_to t('helpers.registrations.edit.back'), :back, class: 'back-link' %>
</div>
</body>