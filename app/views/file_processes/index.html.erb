<h2> Listagem de arquivos enviados </h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nota Fiscal</th>
      <th scope="col">Data de envio</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @file_processes.each do |file_process| %>
    <% xml_data = file_process.parse_xml %> 
      <tr>
        <td scope="row"><%= link_to xml_data.at_xpath("//nNF")&.text, file_process_path(file_process) %></td>
        <td scope="row"><%= file_process[:created_at].strftime("%d/%m/%Y %H:%M:%S") %></td>
        <td scope="row"><%= file_process[:status] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Voltar", root_path , class: "btn btn-outline-primary"%>
